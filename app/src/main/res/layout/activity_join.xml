<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/join_toolbar"
        android:background="@drawable/toolbar_border"
        app:titleTextColor="@color/white"
        android:theme="@style/AppTheme.Actionbar"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/join_image"
        android:src="@drawable/main_character"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:layout_below="@+id/join_toolbar"
        android:layout_centerHorizontal="true"/>
    <ImageView
        android:id="@+id/idImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@id/join_image"
        android:layout_marginLeft="30dp"
        android:src="@drawable/ic_baseline_account_circle_blue_24"/>
    <ImageView
        android:id="@+id/pwImage"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:src="@drawable/ic_baseline_lock_24"
        android:layout_below="@id/idEditView"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="33dp"
        android:background="@drawable/pw_edge"/>
    <EditText
        android:id="@+id/idEditView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_edge"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:hint="E-mail"
        android:textColor="@color/black"
        android:textColorHint="@color/colorPrimary"
        android:layout_below="@+id/join_image"
        android:layout_toRightOf="@+id/idImage"/>
    <EditText
        android:id="@+id/pwEditView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:background="@drawable/login_edge"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:paddingRight="15dp"
        android:hint="password"
        android:textColorHint="@color/colorPrimary"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/pwImage"
        android:layout_below="@+id/idEditView"/>
    <Button
        android:id="@+id/joinBtn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:background="@drawable/button"
        android:text="회원가입"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/pwEditView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="메일이 확인 되지 않는 경우 스팸메일함을 확인해주세요"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:layout_below="@id/joinBtn"/>

</RelativeLayout>